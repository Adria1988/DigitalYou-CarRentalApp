  
<div class="container">
  <div class="row mt-5">
    <div class="col-3"></div>
    <div class="col-6">
      <div class="card">
        <%= form_for :user do |form| %>
          <p>
            <%= form.label :first_name %><br>
            <%= form.text_field :first_name %>
          </p>
          <p>
            <%= form.label :last_name %><br>
            <%= form.text_field :last_name %>
          </p>
          <p>
            <%= form.label :age %><br>
            <%= form.number_field :age %>
          </p>
          <p>
            <%= form.label :city %><br>
            <%= form.text_field :city %>
          </p>
          <div class="buttons-form">
            <% if (request.path).include? 'edit'%>
              <%= form.submit 'Edit User',class:"btn btn-success w-50 my-3"%>
            </div>
          <% else %>
            <%= form.submit 'Create User',class:"btn btn-success w-50 my-3"%>
          <%end%>
          <%= link_to 'Go back all cars', cars_path,class:"btn btn-secondary w-50 my-3"%>
        </div>
      <% end %>
    </div>
    <div class="col-3"></div>
  </div>
</div>

