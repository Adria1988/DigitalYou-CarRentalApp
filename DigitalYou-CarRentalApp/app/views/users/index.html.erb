<h1 class="text-center my-5">All Users</h1>
<div class="container">
  <div class="row">
    <% @users.each do | user | %>
      <div class="col-4 mt-5">
        <div class="card">
          <h1 class="text-center my-3"><%=user.first_name%></h1>
          <div class="card-body text-center">
            <h5 class="card-title"><%=user.last_name%></h5>
            <div class="d-flex flex-column align-items-center">
              <%= link_to 'Show User', user_path(user),class:"btn btn-primary w-50"%>
              <%= link_to 'Edit User', edit_user_path(user),class:"btn btn-warning w-50 my-3"%>
              <%= link_to 'Delete User', user_path(user), :method => :delete, data: {:confirm => "You sure?" },class:"btn btn-danger w-50" %></div>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</div>
