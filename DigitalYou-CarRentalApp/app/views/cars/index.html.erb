<h1 class="text-center my-5">Cars</h1>
<div class="container">
  <div class="row">
    <% @cars.each do | car | %>
      <div class="col-4 mt-5">
        <div class="card">
          <h1 class="text-center my-3"><%=car.name%></h1>
          <div class="card-body text-center">
            <h5 class="card-title"><%=car.name%></h5>
            <div class="d-flex flex-column align-items-center">
              <%= link_to 'Show Car', car_path(car),class:"btn btn-primary w-50"%>
              <%= link_to 'Edit Car', edit_car_path(car),class:"btn btn-warning w-50 my-3"%>
              <%= link_to 'Delete Car', car_path(car), :method => :delete, data: {:confirm => "You sure?" },class:"btn btn-danger w-50" %></div>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</div>
